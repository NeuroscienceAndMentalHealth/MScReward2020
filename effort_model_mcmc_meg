library(loo)
LL1_mcmc <- extract_log_lik(fit_mcmcmodel1)
loo1_mcmc <- loo(LL1_mcmc)
waic1_mcmc <- waic(LL1_mcmc)

LL2_mcmc <- extract_log_lik(fit_mcmcmodel2)
loo2_mcmc <- loo(LL2_mcmc)
waic2_mcmc <- waic(LL2_mcmc)

